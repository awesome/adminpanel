      <div class="dataTables_wrapper form-inline">
        <table id="information-table" class="table table-striped table-bordered dataTable">
          <thead>
            table header
          </thead>
          <tbody>
            table body
          </tbody>
        </table>
        <div class="row-fluid">
          <div class="span6"></div>
          <div class="span6"></div>
        </div>
      </div>
    </div>
