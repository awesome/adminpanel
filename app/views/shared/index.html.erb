<%# provide(:page_title, "Categorias") %>
<!-- provide correct title name -->
<div class="row-fluid">
  <%= 
    link_to( 
      content_tag(:div,
        content_tag(:i, nil, :class => 'icon-plus-sign icon-2x') + content_tag(:span, "new model", nil), 
        :class => "btn btn-box span2"), 
      "#",
      :id => "new-category-button"
    )
  %>
</div>

