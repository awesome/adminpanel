<%= provide(:page_title, "Secciones") %>
<% #if can? :create, Client %>

<% #end %>

<div class="row-fluid">
  <div class="widget widget-padding span12">
    <div class="widget-header">
          <i class="icon-tasks"></i>
          <h5>Secciones</h5>
        </div>
    <div class="widget-body">
      <div class="dataTables_wrapper form-inline">
        <table id="information-table" class="table table-striped table-bordered dataTable">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Descripción</th>
              <% #if can? :manage, Client %>
                <th>Acción</th>
              <% #end %>
            </tr>
          </thead>
          <tbody>
            <% @sections.each do |section| %>
            <tr>
              <td><%= link_to section.name, admin_section_path(section) %></td>
              <td><%= strip_tags section.description %></td>
              <% #if can? :manage, section %>
                <td>
                  <%= link_to content_tag(:i, nil, :class => 'icon-pencil'), edit_admin_section_path(section), :title => "Editar"%>
                </td>
              <% #end %>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row-fluid">
          <div class="span6"></div>
          <div class="span6"></div>
        </div>
      </div>
    </div>
  </div>
</div>
